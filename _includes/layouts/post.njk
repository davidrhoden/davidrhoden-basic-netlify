---
layout: layouts/base.njk
pageType: post
section: post
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

{% if nextPost.url %}
  <p class="ctr">
    <strong>Next</strong>: 
    <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
  </p>
{% endif %}
{% if prevPost.url %}
  <p class="ctr">
    <strong>Previous</strong>: 
    <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
  </p>
{% endif %}

<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>


