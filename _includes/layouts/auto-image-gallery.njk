---
layout: layouts/base.njk
pageType: gallery
---

<h1>{{ title }}</h1>

{% if description %}
  <p>{{ description }}</p>
{% endif %}

{{ content | safe }}

{% if imageDirectory %}
  {% set images = imageDirectory | getImagesFromDir %}
  
  {% if images.length > 0 %}
    <div class="image-gallery">
      {% for image in images %}
        <div class="gallery-item">
          <img src="{{ image.path }}" alt="{{ image.name }}" loading="lazy">
          <p class="image-caption">{{ image.filename }}</p>
        </div>
      {% endfor %}
    </div>
    <p class="image-count">{{ images.length }} image{% if images.length != 1 %}s{% endif %}</p>
  {% else %}
    <p>No images found in directory: {{ imageDirectory }}</p>
  {% endif %}
{% else %}
  <p><em>No image directory specified. Add <code>imageDirectory</code> to your front matter.</em></p>
{% endif %}