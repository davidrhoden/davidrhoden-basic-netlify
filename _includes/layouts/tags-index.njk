---
layout: layouts/base.njk
section: timeline
title: Tags
---

<ul class="pagination">
  {%- for pageEntry in pagination.pages %}
    <li><a href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %}>{{ loop.index }}{{ pageEntry.title }}</a></li>
  {%- endfor %}
</ul>

{% for post in posts %}
<article>
    {% if post.data.tags %}
      <p>
        {% for tag in post.data.tags %}
          {%- if tag != "post" -%}
            {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
          <a href="{{ tagUrl }}" rel="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </p>
    {% endif %}
</article>
{% endfor %}