---
layout: layouts/base.njk
section: timeline-unpaginated
---

<article class="flex flex-wrap">
{% for year, posts in posts | groupby("post.data.date.year") %}
  justYear: {{ date | justYear }},
  post.data.date.year: {{ post.data.date.year }},
  year: {{ year }}:
  {% for post in posts %}
    <div class="left">
      <a href="{{ post.url | url }}">
        {% if post.data.image %}<img class="tiny-thumbnail" src="{{ post.data.image }}?nf_resize=smartcrop&h=32&w=32">{% endif %}
      </a>
    </div>
    <div>
    <h3>
      <a href="{{ post.url | url }}">
        {% if post.data.title %}
          {# post.data.title #}
        {% else %}
          Untitled
        {% endif %}
      </a>
    </h3>
  </div>
  {% endfor %}
  {{ date | justYear }} year end
{% endfor %}
</article>