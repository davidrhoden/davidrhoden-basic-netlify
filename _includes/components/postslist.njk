<section class="postslist">
    {% for post in postslist | reverse %}
    <article {% if post.url==url %} data-current="current item" {% endif %} class="flex">
        <div class="left">
            {% if post.data.image %}
                {% myImage post.data.image,"foo", post.data.title, [280], [280] %}
            {% endif %}
        </div>
        <div>
            <p class="postdate">
                <time datetime="{{ post.date | machineDate }}">
                    <small>{{ post.date | readableDate }}</small>
                </time>
            </p>
            <h3>
                <a href="{{ post.url | url }}">
                    {% if post.data.title %}
                    {{ post.data.title }}
                    {% else %}
                    Untitled
                    {% endif %}
                </a>
            </h3>
            {% if post.data.summary %}
            <p>
                {{ post.data.summary }}
            </p>
            {% endif %}
            {% if post.data.tags %}
            <p>
                {% for tag in post.data.tags %}
                {%- if tag != "post" -%}
                {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
                <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
                {%- endif -%}
                {% endfor %}
            </p>
            {% endif %}
        </div>
    </article>
    <ul class="pagination">
        {%- for pageEntry in pagination.pages %}
        <li><a href="{{ pagination.hrefs[ loop.index0 ] }}" {% if page.url==pagination.hrefs[ loop.index0 ] %} aria-current="page" {% endif %}>{{ loop.index }}</a></li>
        {%- endfor %}
    </ul>
    {% endfor %}
</section>