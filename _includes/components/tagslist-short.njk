<section class="postslist tagslist">
    {% for post in postslist %}
            <a href="{{ post.url }}">{{ post.data.title }}{% if post.data.image %}
                <span><img class="thumbnail" src="/static/img/{{ post.data.image }}?nf_resize=fit&w=240"></span>
            {% endif %}</a>
            {% if post.data.summary %}
                {{ post.data.summary }}
            {% endif %}
            <br>
    {% endfor %}
</section>