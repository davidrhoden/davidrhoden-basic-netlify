
<div id="text-timeline data-pagefind-ignore">
<div id="timeline-list">
  {% set showYear = true %}
  {% set currentYear = "" %}
  {% for post in collections.post | reverse %}
    {% if showYear %}
      {% set postYear = post.date.getFullYear() %}
      {% if currentYear != postYear %}
        {% if currentYear != "" %}
          </div> <!-- END YEAR -->
        {% endif %}
        {% set currentYear = postYear %}

        <div class="year">
          <span class="post-year">{{ postYear }}</span>
     {% endif %}
    {% endif %}
      <div class="text-timeline-link">
        <a href="{{ post.url }}">{{post.data.title}}</a>&nbsp;
        <div class="hidden">
            <div class="thumbnail-container">
              {% if post.data.image %}
               <a href="{{ post.url }}"><img onerror="this.style.display='none'" class="thumbnail" src="/static/img/{{ post.data.image }}?nf_resize=fit&w=320" alt="{{post.data.title}}"></a>
              {% endif %}
            </div>
            <div class="summary">
              <time datetime="{{ post.date | machineDate }}">
                <small>{{ post.date | readableDate }}</small>
              </time><br>
                 <a href="{{ post.url }}"><h3>{{ post.data.title }}</h3></a>
                 <p>{{ post.data.summary }}</p>
              <br>
            </div>
        </div>
      </div>
    {% endfor %}
    </div> <!-- final YEAR div -->
  </div>
</div>
